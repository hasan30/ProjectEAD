<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <link rel="stylesheet" href="~/Content/jquery-ui.css" />
    <script>
        $(function () {

            var special = ["User", "Admin"];

            $('#spec').autocomplete({ source: special });

        });
       
    </script>
    <title></title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body style="background-image:url(/images/back.jpg)">
    <div style="height: 200px; width: 1400px; background-color: black">
        <img src="~/images/logo.jpg">
        <img style="margin-left:480px" src="~/images/capt.PNG">
       
    </div>


    <nav class="navbar navbar-inverse" role="navigation" style="margin-top:-50px">
        <div class="navbar-header" style="position:relative">
            <a class="navbar-brand" href="a">Cinepolis</a>
        </div>

        <div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home","Index","Home")</li>
                <li>@Html.ActionLink("Now Showing", "Contact", "Home")</li>
                <li>@Html.ActionLink("Book Now", "booking", "booking")</li>
                <li>@Html.ActionLink("About Us", "About", "Home")</li>
                <li>@Html.ActionLink("Sign Up", "signup", "login")</li>
                @if (Session["uid"] == null)
                {

                    <li>@Html.ActionLink("Login", "login", "login")</li>
                }
                else
                {
                    <li>@Html.ActionLink("Profile", "Index", "UserProfile")</li>
                    <li>@Html.ActionLink("Signout", "Index", "signOut")</li>
                }


                


            </ul>
            <form class="navbar-form navbar-left pull-right" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="search">
                </div>
                <button type="submit" class="btn btn-default">Search</button>
            </form>
        </div>

    </nav>
    @RenderBody();



    <div style="margin-top:70px" class="pull-bottom">
        <footer style="background-color:black" class="modal-footer"><font color="white">COPYRIGHTS TO HASAN ALI</font></footer>
    </div>
</body>
</html>
