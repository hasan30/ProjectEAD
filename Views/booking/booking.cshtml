@model List<eadfinal.Models.movy>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="col-md-6 col-md-offset-3"  style="background-image: url(/images/lg.jpg); padding: 60px; padding-right: 50px; padding-bottom: 50px; margin-top:50px; padding-top: 5px;">
    <h1 class="col-md-offset-4"><font  style="background-color:GrayText"><u>Book Now</u></font></h1>

    <br/><br/>
    <form action="/booking/onbooking">
        Movie Name:
        <select name="movieName" id="MovieSelector">


            @foreach(var q in Model)
            { 
                <option>@q.movieName</option>
               
            }



        </select>
        &nbsp;&nbsp;&nbsp;


        Date:
        <input name="date" type="date">
        <br></br>


        Time:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

        <input name="time" type="time">
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


        Quantity:<input name="fare" type="number">
        <br /><br /> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <button type="submit" class="btn btn-default">Book Now</button>
    </form>
</div>




<div class="footer pull-bottom">
    <footer class="footer modal-footer"><p style="text-decoration-color:white;">COPYRIGHTS TO HASAN ALI</p></footer>
</div>



